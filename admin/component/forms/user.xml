<form>
    <field name="username">
        <type>text</type>
        <name>username</name>
        <id>username</id>
        <label>CW_REGISTER_USERNAME_LABEL</label>
        <message>CW_REGISTER_USERNAME_MSG</message>
        <placeholder>CW_REGISTER_USERNAME</placeholder>
        <onchange>checkUsername();checkUsernameExists();</onchange>
        <disabled>false</disabled>
    </field>
    <field name="email">
        <type>text</type>
        <name>email</name>
        <id>email</id>
        <label>CW_REGISTER_EMAIL_LABEL</label>
        <message>CW_REGISTER_EMAIL_MSG</message>
        <placeholder>CW_REGISTER_EMAIL</placeholder>
        <onchange>checkEmail();checkEmailExists();</onchange>
        <disabled>false</disabled>
    </field>
    <field name="password">
        <type>password</type>
        <name>password</name>
        <id>password</id>
        <label>CW_REGISTER_PASSWORD_LABEL</label>
        <message>CW_REGISTER_PASSWORD_MSG</message>
        <placeholder>CW_REGISTER_PASSWORD</placeholder>
        <onchange>checkPassword();</onchange>
        <disabled>false</disabled>
    </field>
    <field name="password2">
        <type>password</type>
        <name>password2</name>
        <id>password2</id>
        <label>CW_REGISTER_PASSWORD2_LABEL</label>
        <message>CW_REGISTER_PASSWORD2_MSG</message>
        <placeholder>CW_REGISTER_PASSWORD2</placeholder>
        <onchange>checkPasswordMatch();</onchange>
        <disabled>false</disabled>
    </field>
    <field name="level">
        <type>usergroup</type>
        <name>level</name>
        <id>level</id>
        <label>Grup</label>
        <disabled>false</disabled>
	<option>Selecciona un grup</option>
    </field>
    <field name="auth_token">
        <type>hidden</type>
        <name>auth_token</name>
        <id>auth_token</id>
        <message></message>
        <placeholder></placeholder>
        <onchange></onchange>
        <disabled>false</disabled>
    </field>
</form>
